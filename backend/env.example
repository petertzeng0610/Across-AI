# AI 分析配置
GEMINI_API_KEY=your_gemini_api_key_here
GEMINI_MODEL=gemini-2.5-flash

# ELK MCP 連接配置
# 使用 mcp-proxy 橋接 HTTP MCP Server（推薦）
ELK_MCP_SERVER_URL=http://10.168.10.250:8080
ELK_MCP_PROTOCOL=proxy
# 若未設定，系統會自動搜尋 macOS/Linux/Windows 常見路徑
# MCP_PROXY_PATH=/usr/local/bin/mcp-proxy

# stdio MCP Server（備用）
# ELK_MCP_PROTOCOL=stdio
# ELK_MCP_COMMAND=docker
# ELK_MCP_ARGS=run,--rm,--network,host,docker.elastic.co/mcp/elasticsearch,stdio

# 連接配置
ELK_MCP_TIMEOUT=30000
ELK_MCP_RETRY=3

# Elasticsearch 配置（使用 API Key 認證，無需用戶名/密碼）
ELK_HOST=https://10.168.10.250:9200
ELK_INDEX=adasone-cf-logpush-*
ELK_API_KEY=your_elasticsearch_api_key
# 每次查詢的最大回傳筆數，請務必由 .env 控制以避免硬編碼
ELK_MAX_RESULTS=2

# 查詢配置
ELK_TIME_RANGE=1h
ELK_MAX_TIME_RANGE=24h
ELK_ATTACK_THRESHOLD=20
ELK_TIME_WINDOW=10

# 服務配置
PORT=8080
NODE_ENV=development 
# CVE 分析工具配置
NVD_API_KEY=your-nvd-api-key-here
VULNCHECK_API_KEY=your-vulncheck-api-key-here
PYTHON_PATH=python3
